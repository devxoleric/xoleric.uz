# ==================== APPLICATION ====================
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://xoleric.uz
BACKEND_URL=https://api.xoleric.uz
WS_URL=wss://ws.xoleric.uz

# ==================== DATABASE ====================
DATABASE_URL=postgresql://xoleric:password@postgres:5432/xoleric
DB_HOST=postgres
DB_PORT=5432
DB_NAME=xoleric
DB_USER=xoleric
DB_PASSWORD=your_secure_password

# ==================== SUPABASE ====================
SUPABASE_URL=https://jkjymmjwqlaictcbuhsy.supabase.co
SUPABASE_KEY=your_supabase_key
SUPABASE_JWT_SECRET=your_jwt_secret

# ==================== REDIS ====================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# ==================== JWT ====================
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=30d

# ==================== EMAIL ====================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@xoleric.uz

# ==================== FILE UPLOAD ====================
MAX_FILE_SIZE=5242880 # 5MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW=1
API_RATE_LIMIT_MAX=60

# ==================== MONITORING ====================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# ==================== SECURITY ====================
CORS_ORIGIN=https://xoleric.uz
SESSION_SECRET=your_session_secret
ENCRYPTION_KEY=your_encryption_key

# ==================== EXTERNAL SERVICES ====================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ==================== ANALYTICS ====================
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
SENTRY_DSN=your_sentry_dsn

# ==================== BACKUP ====================
BACKUP_BUCKET=gs://xoleric-backups
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM

# ==================== FEATURE FLAGS ====================
ENABLE_VOICE_MESSAGES=true
ENABLE_STORIES=true
ENABLE_POLLS=true
ENABLE_DARK_MODE=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_OFFLINE_MODE=true
